<MainScreen>:
    #: import time __main__.time
    btn: btn
    counter: counter
    clicked: clicked
    motor:motor
    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: motor
        text: "motor-off"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 0.9, .4, .7, 1

    DPEAButton:
        id: clicked
        text: "click me"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 1, 0.5, 0.2, 1
        on_press: root.pushed()

    DPEAButton:
        id: btn
        text: 'on'
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        color: 0, .5, .2, 1
        on_press: root.pressed()


    DPEAButton:
        id: counter
        text: '0'
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.75
        color: .9, .1, 0.03, 1
        on_press: root.counterpressed()

    DPEAButton:
        id: click
        text: "click to change screens"
        size: 500, 100
        x: root.width * 0.25
        y: root.height * 0.25
        color: 1, 1, 0, 1
        on_press: root.transition_to_second_screen()

<SecondScreen>:
    #: import time __main__.time
    name: 'main'
    click: click
    slider: slider
    label: label
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: click
        text: "click to change back"
        size: 450, 100
        x: root.width * 0.25
        y: root.height * 0.75
        color: 1, 1, 0, 1
        on_press: root.transition_to_main_screen()

    BoxLayout:
        Slider:
            id: slider
            size_hint: .3, .1
            x: root.width * 0.75
            y: root.height * 0.75
            min: 0
            max: 100
            step: 1
            orientation: 'horizontal'
        DPEAButton:
            id: label
            size: 100, 100
            x: root.width * 0.25
            y: root.height * 0.25
            text:str(slider.value)